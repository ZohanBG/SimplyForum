@using SimplyForum.Core.Models.Community
@model AddCommunityModel
@{
    ViewBag.Title = "Add community";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true"  placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BannerImage"></label>
                <input asp-for="@Model.BannerImage" class="form-control" aria-required="true" placeholder="Banner image...">
                <span asp-validation-for="BannerImage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CommunityImage"></label>
                <input asp-for="@Model.CommunityImage" class="form-control" aria-required="true" placeholder="Name...">
                <span asp-validation-for="CommunityImage" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryId">Category</label>
                <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.CommunityCategories)
                    {
                        <option value="@category.Id">@category.Type</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
