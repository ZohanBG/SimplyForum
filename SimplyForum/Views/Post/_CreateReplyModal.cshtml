@using SimplyForum.Core.Models.Coment
@model AddCommentModel

<div class="modal fade" id="replyModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="replyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary" id="replyModalLabel">Reply to this comment ...</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form asp-action="Add" asp-controller="Comment" id="CreateCommentForm">
                        <input type="hidden" asp-for="ParentCommentId"/>
                        <input type="hidden" asp-for="@Model.PostId" />
                        <div class="row mb-3">
                            <div class="col">
                                <div class="form-floating">
                                    <input asp-for="@Model.Description" class="form-control" aria-required="true" placeholder="Text...">
                                    <span asp-validation-for="Description" class="small text-danger"></span>
                                </div>
                            </div>
                        </div>                    
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-outline-primary" value="Send" form="CreateCommentForm">
            </div>
        </div>
    </div>
</div>