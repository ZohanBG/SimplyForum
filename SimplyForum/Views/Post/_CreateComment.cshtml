@using SimplyForum.Core.Models.Coment
@model AddCommentModel

<form method="post" asp-action="Add" asp-controller="Comment">
    <input type="hidden" asp-for="@Model.PostId" />
    <div class="row">
        <div class="form-group">
            <input asp-for="@Model.Description" class="form-control" aria-required="true" placeholder="Text...">
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <input type="submit" class="btn btn-success" />
        </div>
    </div>
</form>
